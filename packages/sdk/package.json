{
  "name": "@ordzaar/ordit-sdk",
  "version": "0.0.0",
  "description": "SDK for simplified interaction with wallet APIs and inscription service",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./magiceden": {
      "import": "./dist/magiceden.js",
      "require": "./dist/magiceden.cjs"
    },
    "./unisat": {
      "import": "./dist/unisat.js",
      "require": "./dist/unisat.cjs"
    },
    "./xverse": {
      "import": "./dist/xverse.js",
      "require": "./dist/xverse.cjs"
    },
    "./leather": {
      "import": "./dist/leather.js",
      "require": "./dist/leather.cjs"
    },
    "./okx": {
      "import": "./dist/okx.js",
      "require": "./dist/okx.cjs"
    }
  },
  "types": "./index.d.ts",
  "files": [
    "dist/*",
    "index.d.ts",
    "magiceden.d.ts",
    "unisat.d.ts",
    "xverse.d.ts",
    "leather.d.ts"
  ],
  "keywords": [
    "ordit",
    "ordit-sdk",
    "sdk"
  ],
  "scripts": {
    "dev": "tsc && vite build --watch",
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "preview": "vite preview",
    "clean": "rimraf dist",
    "test": "vitest",
    "lint": "eslint src --ext ts --report-unused-disable-directives"
  },
  "dependencies": {
    "@bitcoinerlab/secp256k1": "1.1.1",
    "@wallet-standard/core": "^1.1.0",
    "bignumber.js": "9.1.2",
    "bip32": "4.0.0",
    "bip39": "3.1.0",
    "bitcoin-address-validation": "2.2.3",
    "bitcoinjs-lib": "6.1.6",
    "bitcoinjs-message": "2.2.0",
    "buffer-reverse": "1.0.1",
    "cross-fetch": "4.0.0",
    "ecpair": "2.1.0",
    "ethers": "6.13.4",
    "sats-connect": "3.0.1"
  },
  "devDependencies": {
    "@ordzaar/standard-typescript": "^2.2.0",
    "@types/node": "^22.9.1",
    "happy-dom": "^15.11.7",
    "vite-plugin-dts": "4.3.0",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-node-polyfills": "^0.22.0"
  }
}
