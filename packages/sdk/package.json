{
  "name": "@ordzaar/ordit-sdk",
  "version": "0.0.0",
  "description": "SDK for simplified interaction with wallet APIs and inscription service",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./browser-wallets/unisat": {
      "import": "./dist/browser-wallets-unisat.js",
      "require": "./dist/browser-wallets-unisat.cjs"
    },
    "./browser-wallets/xverse": {
      "import": "./dist/browser-wallets-xverse.js",
      "require": "./dist/browser-wallets-xverse.cjs"
    }
  },
  "types": "./index.d.ts",
  "files": [
    "dist/*",
    "index.d.ts",
    "browser-wallets-unisat.d.ts",
    "browser-wallets-xverse.d.ts"
  ],
  "keywords": [
    "ordit",
    "ordit-sdk",
    "sdk"
  ],
  "scripts": {
    "dev": "tsc && vite build --watch",
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "preview": "vite preview",
    "clean": "rimraf dist",
    "test": "vitest",
    "lint": "eslint src --ext ts --report-unused-disable-directives"
  },
  "dependencies": {
    "@bitcoinerlab/secp256k1": "1.0.5",
    "bignumber.js": "9.1.2",
    "bip32": "4.0.0",
    "bip39": "3.1.0",
    "bitcoin-address-validation": "2.2.3",
    "bitcoinjs-lib": "6.1.5",
    "bitcoinjs-message": "2.2.0",
    "buffer-reverse": "1.0.1",
    "cross-fetch": "4.0.0",
    "ecpair": "2.1.0",
    "ethers": "6.8.1",
    "sats-connect": "1.1.2"
  },
  "devDependencies": {
    "@ordzaar/standard-typescript": "^0.3.6",
    "@types/node": "^20.9.0",
    "happy-dom": "^12.10.3",
    "vite-plugin-dts": "^3.6.3",
    "vite-plugin-eslint": "^1.8.1"
  }
}
