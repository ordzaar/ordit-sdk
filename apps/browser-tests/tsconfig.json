{
  "extends": "@ordzaar/standard-web/tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",

    /* Bundler mode */
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./src", "./src/types"],
  "exclude": ["node_modules", "dist"]
}
